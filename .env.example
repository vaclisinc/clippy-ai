# Open Router API Key
# Get your key from https://openrouter.ai/
OPENROUTER_API_KEY=your_key_here

# Optional: Direct Anthropic API Key (fallback)
# ANTHROPIC_API_KEY=your_key_here

# Screenshot interval in seconds (default: 15)
SCREENSHOT_INTERVAL=15

# Idle detection threshold in seconds (default: 180 = 3 minutes)
IDLE_THRESHOLD=180

# Enable debug logging
DEBUG=false
